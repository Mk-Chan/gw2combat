                }
            },
            "required": ["skill_key"]
        },
        "effect_removal": {
            "type": "object",
            "properties": {
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "effect": {
                    "$ref": "#/definitions/effect"
                },
                "unique_effect": {
                    "type": "string"
                },
                "num_stacks": {
                    "type": "integer",
                    "description": "Number of stacks to remove. If not specified, all stacks are removed."
                }
            },
            "anyOf": [
                {
                    "required": ["effect"]
                },
                {
                    "required": ["unique_effect"]
                }
            ]
        },
        "cooldown_modifier": {
            "type": "object",
            "properties": {
                "condition": {
                    "$ref": "#/definitions/condition"
                },
                "skill_key": {
                    "type": "string"
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "add",
                        "subtract",
                        "set",
                        "reset"
                    ]
                },
                "value": {
                    "type": "integer"
                }
            }
        },
        "stacking_type": {
            "type": "string",
            "enum": [
                "intensity",
                "duration",
                "replace"
            ]
        },
        "termination_condition": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "TIME",
                        "ROTATION",
                        "DAMAGE"
                    ]
                },
                "time": {
                    "type": "integer",
                    "description": "Terminate the encounter after this many milliseconds."
                },
                "actor": {
                    "type": "string",
                    "description": "Terminate the encounter after this actor has completed its rotation."
                },
                "damage": {
                    "type": "integer",
                    "description": "Terminate the encounter after this much damage has been dealt to the actor specified in the 'actor' field."
                }
            },
            "anyOf": [
                {
                    "required": ["type", "time"]
                },
                {
                    "required": ["type", "actor"]
                },
                {
                    "required": ["type", "actor", "damage"]
                }
            ]
        }
    }
